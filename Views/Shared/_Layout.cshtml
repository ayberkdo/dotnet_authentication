<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - dotnet_authentication</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dotnet_authentication.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
     <header class="border-bottom header text-muted bg-light">
    <div class="container py-3">
        <div class="d-flex justify-content-between align-items-center">
            <!-- Sol taraf: GitHub bağlantıları -->
            <div class="d-flex align-items-center">
                <a href="https://github.com/ayberkdo" class="text-decoration-none me-2" target="_blank">
                    <i class="fab fa-github fa-lg"></i>
                </a>
                <span class="me-2">/</span>
                <a href="https://github.com/ayberkdo/dotnet_authentication" class="text-decoration-none fw-bold" target="_blank">
                    dotnet_authentication
                </a>
            </div>
            
            <!-- Sağ taraf: Navigasyon linkleri -->
            <nav class="d-flex">
                <a class="text-decoration-none me-3" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-decoration-none me-3" asp-controller="Account" asp-action="Login">Login</a>
                <a class="text-decoration-none" asp-controller="Account" asp-action="Register">Register</a>
            </nav>
        </div>
    </div>
</header>

    <div class="container" style="flex: 1;display: flex;flex-direction: column;justify-content: center; padding: 2rem 0;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light"></footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>